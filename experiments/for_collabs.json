{
    "vocabulary": {
        "min_count": {"tokens": 5}
    },
    "dataset_reader": {
        "type": "mhd",
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": false
            }
        }
    },
    "train_data_path": "/home/rlogan/projects/pcori/preprocessing/data/clean.train.jsonl",
    "validation_data_path": "/home/rlogan/projects/pcori/preprocessing/data/clean.test.jsonl",
    "model": {
        "type": "hierarchical_crf",
        "dropout": 0.7,
        "text_field_embedder": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 64,
                "trainable": true
            }
        },
        "inner_encoder": {
            "type": "lstm",
            "input_size": 64,
            "hidden_size": 32,
            "dropout": 0.7,
            "num_layers": 2,
            "bidirectional": true
        },
        "outer_encoder": {
            "type": "lstm",
            "input_size": 64,
            "hidden_size":32,
            "dropout": 0.7,
            "num_layers": 1,
            "bidirectional": true
        }
    },
    "iterator": {"type": "basic", "batch_size": 5},
    "trainer": {
        "optimizer": {
            "type": "sgd",
            "lr": 0.0001
        },
        "num_epochs": 50,
        "cuda_device": 0,
        "validation_metric": "+accuracy",
        "patience": 10
    }
}
